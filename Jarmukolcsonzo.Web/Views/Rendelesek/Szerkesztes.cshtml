@model Jarmukolcsonzo.Web.Models.Rendeles

@{
    ViewData["Title"] = "Szerkesztés";
}

<h1>@ViewData["Title"]</h1>

<h4>Rendelés</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Szerkesztes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="ugyfel_id" class="control-label"></label>
                <select asp-for="ugyfel_id" class="form-control" asp-items="ViewBag.ugyfel_id"></select>
                <span asp-validation-for="ugyfel_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="jarmu_id" class="control-label"></label>
                <select asp-for="jarmu_id" class="form-control" asp-items="ViewBag.jarmu_id"></select>
                <span asp-validation-for="jarmu_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datum" class="control-label"></label>
                <input asp-for="datum" class="form-control" />
                <span asp-validation-for="datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="napok_szama" class="control-label"></label>
                <input asp-for="napok_szama" class="form-control" />
                <span asp-validation-for="napok_szama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Arkalkulacio" class="form-check-input" />
                    <label asp-for="Arkalkulacio" class="control-label">Kikalkulálja az új árat?</label>
                </div>
                <span asp-validation-for="Arkalkulacio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ar" class="control-label"></label>
                <input asp-for="ar" class="form-control" />
                <span asp-validation-for="ar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Mentés" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza a listához</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
